<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android.camera2basic.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <RelativeLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/reviews"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/favorite_off" />

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_dark_background"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/productImage"
            android:background="@color/cardview_light_background"
            app:srcCompat="@color/cardview_light_background" />

        <Button
            android:id="@+id/linkToAmazon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/reviews"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/reviews"
            android:layout_marginBottom="11dp"
            android:fontFamily="casual"
            android:text="詳細はこちら"
            android:textSize="14sp"
            tools:text="詳細はこちら" />

        <RelativeLayout
            android:id="@+id/reviews"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linkToAmazon"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/productImage">

            <TextView
                android:id="@+id/reviewView_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="casual"
                android:text="テストの基本"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/reviewView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/reviewView_1"
                android:layout_below="@+id/reviewView_1"
                android:fontFamily="casual"
                android:text="簡潔で明瞭"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/reviewView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/reviewView_2"
                android:fontFamily="casual"
                android:text="reviewView_1"
                android:textColor="@android:color/black"
                tools:text="一部主観が強い文面が見られ..." />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/texture"
        android:layout_marginEnd="55dp"
        android:maxHeight="36dp"
        android:minHeight="36dp"
        android:rating="5" />

</RelativeLayout>
